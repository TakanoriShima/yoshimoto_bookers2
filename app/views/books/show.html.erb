<main>
  <p id="notice">
  </p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr class="marginb">
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.user), class: 'btn btn-outline-secondary btn-block edit_user_16177' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <div class="form-field">
          <%= form_with model: @bookn, local:true do |f| %>
            <div class="form-group">
              <%= f.label 'book_title', 'Title' %>
              <%= f.text_field :title, :class => 'form-control book_title' %>
            </div>
            <div class="form-group">
              <%= f.label 'book_opinion', 'Opinion' %>
              <%= f.text_area :body, :class => 'form-control book_body' %>
            </div>
            <div class="form-group">
              <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
                  <p>
                    <%= @book.user.name %>
                  </p>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user.id == current_user.id %>
                <td>
                  <%= link_to("Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_12089') %>
                </td>
                <td>
                  <%= link_to("Destroy", book_path(@book.id), { method: :delete, data: {confirm: "本当に消しますか？"}, class: 'btn btn-sm btn-danger destroy_book_12089'})%>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>